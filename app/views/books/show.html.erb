<div class="flex-row">
  <div class="left">
    <% if @book.image.present? %>
      <%= image_tag @book.image, :class => 'feature' %>
    <% end %>
  </div>
  <div class="right">
    <div class="details">
      <h1><%= @book.title %></h1>
      <h2><%= @book.author %></h2>
      <% if @book.link.present? %>
        <h3><%= link_to ">> View on Goodreads", @book.link %></h3>
      <% end %>
    </div>
    <div class="controls">
        <p><%= link_to 'Add to my books', new_book_reading_path(@book), :method => 'get' %></p>
        <p><%= link_to "Other users' bookshelves with this book", book_readings_path(@book) %></p>
        <p><%= link_to 'Back', books_path %></p>
    </div>
    <% if @current_user.username == 'admin' %>
    <div class="admin-controls">
      <%= link_to 'Edit book', edit_book_path(@book) %>
      <%= link_to "Delete book", @book, :method => 'delete', :data => {:confirm => 'Are you sure'} %>
    </div>
    <% end %>
  </div>
</div>
