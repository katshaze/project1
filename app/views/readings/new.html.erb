<h1><%= @book.title %></h1>

<%= form_for [@reading], url: book_readings_path(@book), method: :post do |f| %>
<%= f.label :to_read %>
<%= f.check_box :to_read %>
<%= f.label :reading %>
<%= f.check_box :reading %>
<%= f.label :read %>
<%= f.check_box :read %>

<%= f.label :stars %>
<%= f.select :stars, ['*', '**', '***', '****', '*****'], :include_blank => true %>

<%= f.submit "Add" %>
<% end %>
