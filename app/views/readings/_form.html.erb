<%= form_for @reading do |f| %>
<%= f.label :to_read, "To read" %>
<%= f.select :to_read, :autofocus => true, :include_blank => true %>
<%= f.label :reading %>
<%= f.select :reading, :include_blank => true %>

<%= f.label :read %>
