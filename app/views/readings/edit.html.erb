<h1><%= @reading.book.title %></h1>

<%= form_for [@book, @reading], url: book_reading_path(@book), method: :patch do |f| %>
<%= f.label :to_read %>
<%= f.check_box :to_read %>
<%= f.label :reading %>
<%= f.check_box :reading %>
<%= f.label :read %>
<%= f.check_box :read %>

<%= f.label :stars %>
<%= f.select :stars, ['*', '**', '***', '****', '*****'], :include_blank => true %>

<%= f.submit "Update" %>
<% end %>
